{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts",
    "tsx"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.(t|j)sx$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/*.(t|j)sx",
    "!**/emails/**",
    "!**/.react-email/**",
    "!**/*.module.(t|j)s",
    "!**/*.dto.(t|j)s",
    "!**/*.entity.(t|j)s",
    "!**/*.enum.(t|j)s",
    "!**/*.mock.(t|j)s",
    "!**/*.model.(t|j)s",
    "!**/*.(in|out)put.(t|j)s",
    "!**/node_modules/**",
    "!dist/**"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@common(.*)$": "<rootDir>/common$1",
    "^@modules(.*)$": "<rootDir>/modules$1",
    "^@providers(.*)$": "<rootDir>/providers$1"
  }
}